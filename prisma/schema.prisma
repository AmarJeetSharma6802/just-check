generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  
}


model User {
  id              String   @id @default(uuid())
  name            String?
  email           String   @unique
  password        String
  // emailOtp        String? // hum db me save karte hain to inki need hogi aur redis ka use karoge to inki need nahi hogi
  // emailOtpExpires DateTime?
  refreshToken    String? 
  isVerified   Boolean  @default(false)
  createdAt       DateTime @default(now())
  
  Post  Post[]
}

model Post {
  id  String @id @default(uuid())
    title       String
  description String

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Doctor {
  id             String              @id @default(uuid())
  name           String
  specialization String?
  createdAt      DateTime            @default(now())
  availability   DoctorAvailability[]
  appointments   Appointment[]
}

model DoctorAvailability {
  id            String   @id @default(uuid())
  doctorId      String
  doctor        Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  dayOfWeek     Int      // 0=Sunday, 6=Saturday
  startTime     String   // "09:00"
  endTime       String   // "17:00"
  slotDuration  Int      @default(30)
}

model Appointment {
  id              String   @id @default(uuid())
  patientId       String   // auth user id
  doctorId        String
  doctor          Doctor   @relation(fields: [doctorId], references: [id])
  appointmentDate DateTime
  startTime       String
  endTime         String
  status          String   @default("booked") // booked | cancelled | completed

 // Patient info (self ya other person)
  patientName     String
  patientAge      Int
  patientPhone    String?
  isForSelf       Boolean  @default(true)
  

  createdAt       DateTime @default(now())
}

